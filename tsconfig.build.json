{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declarationDir": "build",
    "outDir": "build",
    "noEmit": false,
    "emitDeclarationOnly": true
  },
  "include": [
    "./src/components/**/*.tsx",
    "./src/components/**/*.ts",
    "./src/store/*",
    "./src/types/*",
    "./typings/*",
    "**/declaration.d.ts",
    "./index.ts"
  ]
}
